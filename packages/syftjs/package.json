{
  "name": "SyftJS",
  "version": "1.0.0",
  "description": "SyftJS is a JavaScript library for seamless integration with PySyft, enabling smooth requests, object serialization, and deserialization. It simplifies communication between JavaScript applications and PySyft-powered systems, fostering secure and efficient data exchange for federated learning and decentralized AI.",
  "main": "lib/main/index.js",
  "typings": "lib/main/index.d.ts",
  "repository": "https://github.com/OpenMined/PySyft.git",
  "author": "",
  "license": "MIT",
  "keywords": [
    "typescript",
    "PySyft",
    "PyGrid",
    "SyftJS"
  ],
  "scripts": {
    "build": "rollup -c",
    "fix": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:unit": "vitest run  -vvv --coverage",
    "test:doc": "run-s doc:html doc:json",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && open-cli lib/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out lib/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json lib/docs/typedoc.json"
  },
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/debug": "^4.1.8",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitest/coverage-v8": "^0.33.0",
    "capnp-ts": "^0.7.0",
    "codecov": "^3.8.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "libsodium-wrappers": "^0.7.11",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.2.0",
    "rollup": "^3.26.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.22.9",
    "typescript": "^4.2.4",
    "uuid": "^9.0.0",
    "vitest": "^0.32.4"
  },
  "files": [
    "lib/main",
    "lib/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "lib/main/"
      },
      "compile": false
    },
    "files": [
      "!lib/module/**"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "type": "module"
}
